@model MVC_CRUD_C__ASPNET.Models.ViewModels.UserVM

@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oUser.Id == 0)
{
    <h1>Crear Empleado</h1>
}
else
{
    <h1>Editar Empleado</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="UserDetail" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oUser.Id"/>

            <div class="mb-2">
                <label class="form-label" asp-for="oUser.Name">Nombre Completo</label>
                <input class="form-control form-control-sm" asp-for="oUser.Name" type="text"/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oUser.Phone">Telefono</label>
                <input class="form-control form-control-sm" asp-for="oUser.Phone" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oUser.Email">Correo</label>
                <input class="form-control form-control-sm" asp-for="oUser.Email" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oUser.IdCargo">Cargo</label>
                <select class="form-select form-select-sm" asp-for="oUser.IdCargo" asp-items="@Model.oPositionList">
                    <option selected disabled>--Selecionar--</option>
                </select>
            </div>


            <div class="mb-2">
                @if (Model.oUser.Id == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-info btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>
            
        </form>
    </div>
</div>