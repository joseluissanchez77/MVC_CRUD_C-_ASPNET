@model MVC_CRUD_C__ASPNET.Models.User

@{
    ViewData["Title"] = "UserDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro de eliminar usuario?</h3>


<div class="row">
    <div class="col-sm-4">
        <form asp-action="UserDelete" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="Name">Nombre Completo</label>
                <input class="form-control form-control-sm" asp-for="Name" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Phone">Telefono</label>
                <input class="form-control form-control-sm" asp-for="Phone" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Email">Correo</label>
                <input class="form-control form-control-sm" asp-for="Email" type="text" disabled/>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdCargo">Cargo</label>
                <input class="form-control form-control-sm" asp-for="oPosition.Description" type="text" disabled />
            </div>


            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>

                <a class="btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>
    </div>
</div>
